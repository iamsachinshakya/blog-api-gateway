# ------------------------
# Server
# ------------------------
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# ------------------------
# Logging
# ------------------------
# production  -> info
# staging     -> http
# development -> debug
LOG_LEVEL=debug


# ------------------------
# API Gateway Identity
# ------------------------
SERVICE_NAME=api-gateway


# ------------------------
# Redis (Rate Limiting / Cache)
# ------------------------
# When API Gateway runs locally (outside Docker)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# Optional convenience URL
REDIS_URL=redis://localhost:6380


# ------------------------
# Kafka (Event Streaming)
# ------------------------
# Local Kafka exposed port
KAFKA_BROKERS=localhost:9092

# Gateway-specific identity
KAFKA_CLIENT_ID=api-gateway
KAFKA_GROUP_ID=api-gateway-group

# Security (disabled for local dev)
KAFKA_SSL_ENABLED=false
KAFKA_USERNAME=
KAFKA_PASSWORD=


# ------------------------
# Auth / Security (Gateway-level)
# ------------------------
# Used only if gateway validates JWT before forwarding
JWT_PUBLIC_KEY=
JWT_ISSUER=blog-auth-service
JWT_AUDIENCE=blog-api


# ------------------------
# Rate Limiting (Redis-backed)
# ------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100


# ------------------------
# Downstream Services (DEV)
# ------------------------
AUTH_SERVICE_BASE_URL=http://localhost:4001
USER_SERVICE_BASE_URL=http://localhost:4002
POST_SERVICE_BASE_URL=http://localhost:4003
COMMENT_SERVICE_BASE_URL=http://localhost:4004
